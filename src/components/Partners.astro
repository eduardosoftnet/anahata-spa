---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

import logoRiman from "../assets/partners/LOGO-RIMAN.svg";
import logoMarant from "../assets/partners/Marant-Logotipo.png";
import logoNatura from "../assets/partners/logo-natura.svg";
import logoTegor from "../assets/partners/tegor-logo1.png";

const partners = [
    { src: logoRiman, alt: "Riman" },
    { src: logoMarant, alt: "Marant" },
    { src: logoNatura, alt: "Natura" },
    { src: logoTegor, alt: "Tegor", className: "scale-125" },
];

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

{
    partners.length > 0 && (
        <section class="py-10 bg-stone-50/50">
            <div class="max-w-6xl mx-auto px-6">
                <h3 class="text-sm md:text-base font-serif text-center text-stone-400 mb-4 uppercase tracking-[0.2em]">
                    {t("partners.title")}
                </h3>

                <div class="flex flex-wrap justify-center items-center gap-x-12 gap-y-8">
                    {partners.map((partner) => (
                        <div class="group relative flex justify-center items-center w-28 h-16 transition-transform duration-300 hover:scale-105">
                            <Image
                                src={partner.src}
                                alt={partner.alt}
                                class={`max-w-full max-h-full object-contain filter grayscale opacity-50 transition-all duration-500 ease-out group-hover:grayscale-0 group-hover:opacity-100 ${partner.className || ""}`}
                            />
                        </div>
                    ))}
                </div>
            </div>
        </section>
    )
}
