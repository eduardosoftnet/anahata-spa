---
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
} from "../i18n/utils";
import LanguagePicker from "./LanguagePicker.astro";

interface Props {
    translatedPaths?: Record<string, string>;
}

const { translatedPaths } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header
    class="fixed w-full z-50 transition-all duration-300 bg-gradient-to-b from-black/60 to-transparent backdrop-blur-[2px]"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-center items-center h-20 relative">
            <!-- Logo Removed -->

            <!-- Desktop Menu Centered -->
            <nav class="hidden md:flex space-x-8 items-center">
                <a
                    href={getRelativeLocaleUrl(lang, "#inicio")}
                    class="group relative text-stone-100 hover:text-white transition px-1 py-2 text-sm font-medium uppercase tracking-wide drop-shadow-sm"
                >
                    {t("nav.home")}
                    <span
                        class="absolute bottom-0 left-0 w-0 h-0.5 bg-teal-400 transition-all duration-300 ease-out group-hover:w-full"
                    ></span>
                </a>
                <a
                    href={getRelativeLocaleUrl(lang, "#servicios")}
                    class="group relative text-stone-100 hover:text-white transition px-1 py-2 text-sm font-medium uppercase tracking-wide drop-shadow-sm"
                >
                    {t("nav.services")}
                    <span
                        class="absolute bottom-0 left-0 w-0 h-0.5 bg-teal-400 transition-all duration-300 ease-out group-hover:w-full"
                    ></span>
                </a>
                <a
                    href={getRelativeLocaleUrl(lang, "#nosotros")}
                    class="group relative text-stone-100 hover:text-white transition px-1 py-2 text-sm font-medium uppercase tracking-wide drop-shadow-sm"
                >
                    {t("nav.about")}
                    <span
                        class="absolute bottom-0 left-0 w-0 h-0.5 bg-teal-400 transition-all duration-300 ease-out group-hover:w-full"
                    ></span>
                </a>

                <div class="px-2">
                    <LanguagePicker translatedPaths={translatedPaths} />
                </div>

                <a
                    href="https://wa.me/529992923345"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-teal-700/90 hover:bg-teal-600 text-white px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300 shadow-lg hover:shadow-teal-500/50 border border-teal-500/30 backdrop-blur-md hover:-translate-y-0.5 hover:scale-105"
                    >{t("service.book")}</a
                >
            </nav>

            <!-- Mobile menu button (absolute positioned to top right) -->
            <div class="md:hidden absolute top-6 right-6">
                <button
                    type="button"
                    id="mobile-menu-btn"
                    class="text-stone-100 hover:text-white focus:outline-none p-2 bg-black/20 rounded-full backdrop-blur-sm"
                    aria-expanded="false"
                    aria-controls="mobile-menu"
                >
                    <span class="sr-only">Abrir men√∫</span>
                    <svg
                        class="h-8 w-8"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="md:hidden bg-white/30 backdrop-blur-xl border-t border-white/20 overflow-hidden max-h-0 opacity-0 invisible transition-all duration-500 ease-in-out"
    >
        <div class="px-4 pt-4 pb-8 space-y-4 flex flex-col items-center">
            <a
                href={getRelativeLocaleUrl(lang, "#inicio")}
                class="text-stone-100 hover:text-white block px-3 py-2 text-lg font-medium uppercase tracking-wide transition-colors"
                >{t("nav.home")}</a
            >
            <a
                href={getRelativeLocaleUrl(lang, "#servicios")}
                class="text-stone-100 hover:text-white block px-3 py-2 text-lg font-medium uppercase tracking-wide transition-colors"
                >{t("nav.services")}</a
            >
            <a
                href={getRelativeLocaleUrl(lang, "#nosotros")}
                class="text-stone-100 hover:text-white block px-3 py-2 text-lg font-medium uppercase tracking-wide transition-colors"
                >{t("nav.about")}</a
            >
            <div class="py-2">
                <LanguagePicker />
            </div>
            <a
                href="https://wa.me/529992923345"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-teal-700 hover:bg-teal-600 text-white px-8 py-3 rounded-full text-base font-medium transition shadow-lg mt-4"
                >{t("service.book")}</a
            >
        </div>
    </div>
</header>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            const isExpanded = btn.getAttribute("aria-expanded") === "true";
            btn.setAttribute("aria-expanded", String(!isExpanded));

            // Toggle classes for animation
            if (!isExpanded) {
                // Open menu
                menu.classList.remove("max-h-0", "opacity-0", "invisible");
                menu.classList.add("max-h-96", "opacity-100", "visible");
            } else {
                // Close menu
                menu.classList.add("max-h-0", "opacity-0", "invisible");
                menu.classList.remove("max-h-96", "opacity-100", "visible");
            }
        });

        // Close menu when clicking a link
        const links = menu.querySelectorAll("a");
        links.forEach((link) => {
            link.addEventListener("click", () => {
                menu.classList.add("max-h-0", "opacity-0", "invisible");
                menu.classList.remove("max-h-96", "opacity-100", "visible");
                btn.setAttribute("aria-expanded", "false");
            });
        });
    }
</script>
