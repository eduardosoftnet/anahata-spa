---
import Layout from "../../../layouts/Layout.astro";
import { getServices } from "../../../data/services";
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
} from "../../../i18n/utils";

const lang = "en";
const t = useTranslations(lang);

export async function getStaticPaths() {
    const services = getServices("en");
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;

// Find the corresponding Spanish service
import { servicesEs } from "../../../data/services";
const translatedService = servicesEs.find((s) => s.id === service.id);
const translatedPaths = translatedService
    ? {
          es: `/services/${translatedService.slug}`,
      }
    : {};
---

<Layout
    title={`${service.title} | Anahata Spa`}
    translatedPaths={translatedPaths}
>
    <main class="pt-32 pb-20 px-6 bg-stone-50 min-h-screen">
        <div class="max-w-4xl mx-auto">
            <a
                href={getRelativeLocaleUrl(lang, "#servicios")}
                class="inline-flex items-center text-teal-700 hover:text-teal-900 font-medium mb-8 transition-colors group"
            >
                <span
                    class="mr-2 transform group-hover:-translate-x-1 transition-transform"
                    >←</span
                >
                {t("service.back")}
            </a>

            <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
                <div class="p-8 md:p-12 lg:p-16">
                    <div class="flex flex-col md:flex-row gap-8 items-start">
                        <div
                            class="bg-stone-100 p-8 rounded-2xl flex items-center justify-center shrink-0"
                        >
                            <span class="text-6xl md:text-8xl"
                                >{service.icon}</span
                            >
                        </div>

                        <div class="flex-1">
                            <h1
                                class="text-4xl md:text-5xl font-bold text-teal-800 mb-6 font-serif"
                            >
                                {service.title}
                            </h1>
                            <p
                                class="text-lg text-stone-600 leading-relaxed mb-8"
                            >
                                {service.longDesc}
                            </p>

                            {
                                service.subServices &&
                                    service.subServices.length > 0 && (
                                        <div class="mb-8">
                                            <h3 class="text-xl font-bold text-teal-800 mb-4 font-serif">
                                                {t("service.treatments")}
                                            </h3>
                                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                                {service.subServices.map(
                                                    (subService) => (
                                                        <li class="flex items-center text-stone-700">
                                                            <span class="text-teal-600 mr-2">
                                                                ✦
                                                            </span>
                                                            {subService}
                                                        </li>
                                                    ),
                                                )}
                                            </ul>
                                        </div>
                                    )
                            }

                            <div class="flex flex-wrap gap-4">
                                <a
                                    href="https://wa.me/529992923345"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="bg-teal-700 hover:bg-teal-600 text-white font-semibold py-3 px-8 rounded-full transition duration-300 shadow-lg"
                                >
                                    {t("service.book")}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
